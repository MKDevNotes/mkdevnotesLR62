<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0">
	<portlet>
		<portlet-name>mk-mode-example</portlet-name>
		<display-name>MK Mode Example</display-name>
		<portlet-class>com.liferay.util.bridges.mvc.MVCPortlet</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/html/view.jsp</value>
		</init-param>
		<init-param>
			<name>edit-template</name>
			<value>/html/edit.jsp</value>
		</init-param>
		<init-param>
			<name>help-template</name>
			<value>/html/help.jsp</value>
		</init-param>
		<init-param>
			<name>about-template</name>
			<value>/html/about.jsp</value>
		</init-param>
		<init-param>
			<name>config-template</name>
			<value>/html/config.jsp</value>
		</init-param>
		<init-param>
			<name>edit-defaults-template</name>
			<value>/html/edit-defaults.jsp</value>
		</init-param>
		<init-param>
			<name>edit-guest-template</name>
			<value>/html/edit-guest.jsp</value>
		</init-param>
		<init-param>
			<name>preview-template</name>
			<value>/html/preview.jsp</value>
		</init-param>
		<init-param>
			<name>print-template</name>
			<value>/html/print.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
			<portlet-mode>edit</portlet-mode>
			<portlet-mode>help</portlet-mode>
			<portlet-mode>about</portlet-mode>
			<portlet-mode>config</portlet-mode>
			<portlet-mode>edit_defaults</portlet-mode>
			<portlet-mode>edit_guest</portlet-mode>
			<portlet-mode>preview</portlet-mode>
			<portlet-mode>print</portlet-mode>
		</supports>
		<portlet-info>
			<title>MK Mode Example</title>
			<short-title>MK Mode Example</short-title>
			<keywords>MK Mode Example</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
</portlet-app>