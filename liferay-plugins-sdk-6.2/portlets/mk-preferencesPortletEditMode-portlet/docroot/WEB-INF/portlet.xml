<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0">
	<portlet>
		<portlet-name>mk-preferencesPortletEditMode</portlet-name>
		<display-name>MK Preferences Portlet Edit Mode Portlet</display-name>
		<portlet-class>org.mk.liferay.example.MKPreferencesEditModeController</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/view.jsp</value>
		</init-param>
		<init-param>
			<name>edit-template</name>
			<value>/edit.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
			<portlet-mode>edit</portlet-mode>
		</supports>
		<portlet-info>
			<title>MK Preferences Portlet Edit Mode Portlet</title>
			<short-title>MK Preferences Portlet Edit Mode Portlet</short-title>
			<keywords>MK Preferences Portlet Edit Mode Portlet</keywords>
		</portlet-info>
		<portlet-preferences>
			<preference>
				<name>State</name>
				<value>Tamil Nadu</value>
			</preference>
			<preference>
				<name>Currency</name>
				<value>INR</value>
				<value>SAR</value>
				<value>USD</value>
			</preference>
			<preference>
				<name>StockSymbol</name>
				<value>AD</value>
			</preference>
		</portlet-preferences>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
</portlet-app>