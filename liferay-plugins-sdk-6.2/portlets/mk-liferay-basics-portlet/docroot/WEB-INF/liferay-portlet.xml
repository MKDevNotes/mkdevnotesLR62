<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.2.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_2_0.dtd">

<liferay-portlet-app>
	<portlet>
		<portlet-name>mk-liferay-basics</portlet-name>
		<icon>/icon.png</icon>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>/js/main.js</footer-portlet-javascript>
		<css-class-wrapper>mk-liferay-basics-portlet</css-class-wrapper>
	</portlet>
	<portlet>
		<portlet-name>mk-liferay-java-script</portlet-name>
		<icon>/icon.png</icon>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>
			/js/main.js
		</footer-portlet-javascript>
		<css-class-wrapper>
			mk-liferay-java-script-portlet
		</css-class-wrapper>
	</portlet>
	<portlet>
		<portlet-name>mk-friendly-url</portlet-name>
		<icon>/icon.png</icon>
		<friendly-url-mapper-class>com.liferay.portal.kernel.portlet.DefaultFriendlyURLMapper</friendly-url-mapper-class>
		<friendly-url-mapping>mkpractical</friendly-url-mapping>  <!-- Anything you can see in URL -->
		<friendly-url-routes>org/mk/example/friendlyurl/portlet/mk-practical-friendly-url-routes.xml<!-- 
				any name -->
		</friendly-url-routes>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>
			/js/main.js
		</footer-portlet-javascript>
		<css-class-wrapper>mk-friendly-url-portlet</css-class-wrapper>
	</portlet>
	<portlet>
		<portlet-name>mk-create-url-example</portlet-name>
		<icon>/icon.png</icon>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>
			/js/main.js
		</footer-portlet-javascript>
		<css-class-wrapper>
			mk-create-url-example-portlet
		</css-class-wrapper>
	</portlet>
	<portlet>
		<portlet-name>mk-multiple-render</portlet-name>
		<icon>/icon.png</icon>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>
			/js/main.js
		</footer-portlet-javascript>
		<css-class-wrapper>
			mk-multiple-render-portlet
		</css-class-wrapper>
	</portlet>
	<portlet>
		<portlet-name>mk-multiple-action</portlet-name>
		<icon>/icon.png</icon>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>
			/js/main.js
		</footer-portlet-javascript>
		<css-class-wrapper>
			mk-multiple-action-portlet
		</css-class-wrapper>
	</portlet>
	<portlet>
		<portlet-name>mk-ajax-controller</portlet-name>
		<icon>/icon.png</icon>
		<requires-namespaced-parameters>false</requires-namespaced-parameters>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>
			/js/main.js
		</footer-portlet-javascript>
		<css-class-wrapper>
			mk-ajax-controller-portlet
		</css-class-wrapper>
	</portlet>
	<portlet>
		<portlet-name>
			mk-custom-validation-message-controller
		</portlet-name>
		<icon>/icon.png</icon>
		<header-portlet-css>/css/customValidation.css</header-portlet-css>
		<footer-portlet-javascript>
			/js/main.js
		</footer-portlet-javascript>
		<css-class-wrapper>
			mk-custom-validation-message-controller-portlet
		</css-class-wrapper>
	</portlet>
	<portlet>
		<portlet-name>mk-liferay-validation-controller</portlet-name>
		<icon>/icon.png</icon>
		<header-portlet-css>/css/customValidation.css</header-portlet-css>
		<footer-portlet-javascript>
			/js/main.js
		</footer-portlet-javascript>
		<css-class-wrapper>
			mk-liferay-validation-controller-portlet
		</css-class-wrapper>
	</portlet>
	<portlet>
		<portlet-name>
			mk-client-side-validation-controller
		</portlet-name>
		<icon>/icon.png</icon>
		<header-portlet-css>/css/customValidation.css</header-portlet-css>
		<footer-portlet-javascript>
			/js/main.js
		</footer-portlet-javascript>
		<css-class-wrapper>
			mk-client-side-validation-controller-portlet
		</css-class-wrapper>
	</portlet>
	<role-mapper>
		<role-name>administrator</role-name>
		<role-link>Administrator</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>guest</role-name>
		<role-link>Guest</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>power-user</role-name>
		<role-link>Power User</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>user</role-name>
		<role-link>User</role-link>
	</role-mapper>
</liferay-portlet-app>